<Window x:Class="Lab5App1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5App1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Margin="3" Padding="3" Background="Orange">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Открыть" Click="MenuItem_Click"/>
                <MenuItem Header="_Сохранить" Click="MenuItem_Click_1" />
                <Separator/>
                <MenuItem Header="_Закрыть" Click="MenuItem_Click_2" />
            </MenuItem>
            <MenuItem Header="_Правка"/>
            <MenuItem Header="_Справка" />
        </Menu>
        <TextBox x:Name="textBox1" Grid.Row="1" TextWrapping="Wrap" Padding="3" Margin="3" VerticalScrollBarVisibility="Auto" Background="Gray"/>
    </Grid>
</Window>
